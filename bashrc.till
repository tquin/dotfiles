# PROGRAM OPTIONS
# ----- ----- ----- ----- -----

# Make `grep` colourful
export GREP_OPTS='--color=always'
alias grep='grep ${GREP_OPTS}'
alias egrep='egrep ${GREP_OPTS}'

# Make `ls` colourful
export LS_OPTS='--color=auto'
alias ls='ls ${LS_OPTS}'

export MOZ_ENABLE_WAYLAND=1

# ----- ----- ----- ----- -----
# FUNCTIONS
# ----- ----- ----- ----- -----

# Easy history grep
function search_history() {
  cat ~/.histfile | grep $1
}
alias hist='search_history'

# Print any TODO or XXX lines in a file (case insensitive)
function todos() {
    echo -e "\\n--- XXXs"
    grep -nri 'XXX'
    echo -e "\\n--- To Dos"
    grep -nri 'TODO'
    echo ""
}

