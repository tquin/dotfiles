# Run last command with root
alias please='sudo $(fc -ln -1)'

# Package manager
if [ $(command -v apt-get) ]; then
    alias easy_upgrade="sudo apt-get update && \
                        sudo apt-get upgrade -y && \
                        sudo snap refresh"
elif [ $(command -v dnf) ]; then
    alias easy_upgrade="sudo dnf update && \
                        sudo dnf upgrade -y \
                        && flatpak update -y"
elif [ $(command -v pacman) ]; then
    alias easy_upgrade="sudo pacman -Syu --noconfirm"
fi

